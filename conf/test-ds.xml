<datasources>
	<local-tx-datasource>
		<jndi-name>test-DS</jndi-name>
		<connection-url>
			jdbc:mysql://localhost/exceptions?autoReconnect=yes
		</connection-url>
		<driver-class>com.mysql.jdbc.Driver</driver-class>
		<user-name>root</user-name>
		<password></password>
		<check-valid-connection-sql>
			select 1
		</check-valid-connection-sql>
